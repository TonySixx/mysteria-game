mkdir mysteria
cd mysteria
npm init -y
npm install react react-dom @types/react @types/react-dom typescript @types/node
npm install --save-dev webpack webpack-cli webpack-dev-server babel-loader @babel/core @babel/preset-env @babel/preset-react @babel/preset-typescript html-webpack-plugin
npm install express socket.io @supabase/supabase-js
npx create-react-app client --template typescript
cd client
npm install socket.io-client @types/socket.io-client
mkdir server
cd server
npm init -y
npm install express socket.io @supabase/supabase-js
npm install --save-dev typescript @types/express @types/node ts-node nodemon
npm install dotenv
touch .env
npm install -g vercel
cd client
touch vercel.json

vercel --prod --force


touch render.yaml

cd server
touch tsconfig.json

cd mysteria
git init
git add .
git commit -m "Initial commit"
git branch -M main
git remote add origin https://github.com/tonysixx/mysteria-game.git
git push -u origin main

touch .gitignore
git add .gitignore
git commit -m "Add .gitignore"
git push

cd client
vercel --prod

git add .
git commit -m "Update CORS settings and client configuration"
git push

git add client/vercel.json
git commit -m "Update Vercel configuration"

git push


